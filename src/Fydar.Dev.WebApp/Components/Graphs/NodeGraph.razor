
<div class="graph" style="--Lodestone-graph-targetsize: @TargetSize">

    <div class="graph-background"></div>

    <div class="graph-content">
        @ChildContent
    </div>

</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public int TargetSize { get; set; }
}
