<div class="container nameplate">

    <audio id="pronunciation-fydar" preload="none">
        <source src="/media/pronunciation-fydar.mp3" type="audio/mpeg">
        <source src="/media/pronunciation-fydar.ogg" type="audio/ogg">
    </audio>

    <div class="phonetics" id="pronunciation-phonetics">/<span class="syllable1">&#952;a&#618;</span><span class="syllable2">d&#593;r</span>/</div>
    
    <SvgSprite class="feature-signature" Link="/icons.svg?v=1#icon-fydar-signature" Alt="Fydar's signature." />

    <script>
        const audio = document.getElementById('pronunciation-fydar');
        const text = document.getElementById('pronunciation-phonetics');

        text.onclick = () => {
            audio.play();
        };
        audio.onplay = () => {
            text.classList.remove('readanimation');
            text.classList.add('readanimation');
        };
        audio.onended = function() {
            text.classList.remove('readanimation');
        };
    </script>

