@layout GameLayout
@page "/play/cryptcrawl"

<HeadContent>
    @{
        var openGraphModel = new OpenGraphModel()
        {
            Title = "Play Crypt Crawl - Fydar",
            Description = "A pixel art dungeon crawler with dungeon textures generated in Substance Designer.",
            CanonicalUrl = "https://fydar.dev/play/cryptcrawl",
            Properties = [
                new OpenGraphModelImage()
                {
                    Url = "https://fydar.dev/media/cryptcrawl/social.webp",
                    Alt = "Promotional material for the game 'Crypt Crawl'."
                }
            ]
        };
        var linkData = new LinkData()
        {
            new LinkDataBreadcrumbList()
            {
                new LinkDataBreadcrumbListItem()
                {
                    Name = "Play",
                    Item = "https://fydar.dev/play/"
                },
                new LinkDataBreadcrumbListItem()
                {
                    Name = "Crypt Crawl",
                    Item = "https://fydar.dev/play/cryptcrawl"
                }
            }
        };
    }
    <OpenGraphComponent Model="@openGraphModel" />
    <LinkDataComponent Model="@linkData" />
    <meta name="theme-color" content="#2c3840">
    <link rel="shortcut icon" href="/play/cryptcrawl/favicon.ico">
    <link rel="manifest" href="/play/cryptcrawl/manifest.webmanifest">
</HeadContent>

<EmbedUnity>
    <Configuration>
        <script>
            var config = {
                companyName: "Fydar",
                productName: "Crypt Crawl",
                productVersion: "v0.0.1",
                dataUrl: "/play/cryptcrawl/build/WebGL.data.br",
                codeUrl: "/play/cryptcrawl/build/WebGL.wasm.br",
                frameworkUrl: "/play/cryptcrawl/build/WebGL.framework.js.br",
                streamingAssetsUrl: "/play/cryptcrawl/StreamingAssets",
                arguments: [],
            };
            var loaderUrl = "/play/cryptcrawl/build/WebGL.loader.js";
        </script>
    </Configuration>
    <Placeholder>
        <img src="/play/cryptcrawl/favicon.ico" alt="The logo for 'Crypt Crawl'." style="width: 200px; max-width: 90%; margin-bottom: 32px;" />
    </Placeholder>
</EmbedUnity>

<script>
    var serviceWorkerUrl = "/play/cryptcrawl/ServiceWorker.js";
    window.addEventListener("load", function () {
        if ("serviceWorker" in navigator) {
            navigator.serviceWorker.register(serviceWorkerUrl);
        }
    });
</script>
