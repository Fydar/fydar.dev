@layout GameLayout
@page "/play/void"

<HeadContent>
    @{
        var openGraphModel = new OpenGraphModel()
        {
            Title = "Play Void - Fydar",
            Description = "Explore the empty void, deploy mining vessels to mine asteroids.",
            CanonicalUrl = "https://fydar.dev/play/void",
            Properties = [
                new OpenGraphModelImage()
                {
                    Url = "https://fydar.dev/media/void/social.webp",
                    Alt = "Promotional material for the game 'Void'."
                }
            ]
        };
        var linkData = new LinkData()
        {
            new LinkDataBreadcrumbList()
            {
                new LinkDataBreadcrumbListItem()
                {
                    Name = "Play",
                    Item = "https://fydar.dev/play/"
                },
                new LinkDataBreadcrumbListItem()
                {
                    Name = "Void",
                    Item = "https://fydar.dev/play/void"
                }
            }
        };
    }
    <OpenGraphComponent Model="@openGraphModel" />
    <LinkDataComponent Model="@linkData" />
    <meta name="theme-color" content="#2c3840">
    <link rel="shortcut icon" href="/play/void/favicon.ico">
    <link rel="manifest" href="/play/void/manifest.webmanifest">
</HeadContent>

<EmbedUnity>
    <Configuration>
        <script>
            var config = {
                companyName: "Fydar",
                productName: "Void",
                productVersion: "v0.1.0",
                dataUrl: "/play/void/build/void.data.br",
                codeUrl: "/play/void/build/void.wasm.br",
                frameworkUrl: "/play/void/build/void.framework.js.br",
                streamingAssetsUrl: "/play/void/StreamingAssets",
                arguments: [],
            };
            var loaderUrl = "/play/void/build/void.loader.js";
        </script>
    </Configuration>
    <Placeholder>
        <img src="/play/void/favicon.ico" alt="The logo for 'Void'." style="width: 200px; max-width: 90%; margin-bottom: 32px;" />
    </Placeholder>
</EmbedUnity>

<script>
    var serviceWorkerUrl = "/play/void/ServiceWorker.js";
    window.addEventListener("load", function () {
        if ("serviceWorker" in navigator) {
            navigator.serviceWorker.register(serviceWorkerUrl);
        }
    });
</script>
