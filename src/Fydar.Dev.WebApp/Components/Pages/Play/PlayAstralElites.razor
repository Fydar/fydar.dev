@layout GameLayout
@page "/play/astralelites"

<HeadContent>
    @{
        var openGraphModel = new OpenGraphModel()
        {
            Title = "Play Astral Elites - Fydar",
            Description = "The physics-based and fast-paced asteroids clone for the modern era.",
            CanonicalUrl = "https://fydar.dev/play/astralelites",
            Properties = [
                new OpenGraphModelImage()
                {
                    Url = "https://fydar.dev/media/astralelites/keyart-1_91x1-1200x630.webp",
                    Alt = "Promotional material for the game 'Astral Elites'."
                }
            ]
        };
    }
    <OpenGraphComponent Model="@openGraphModel" />
    <meta name="theme-color" content="#2c3840">
    <link rel="shortcut icon" href="/play/astralelites/favicon.ico">
    <link rel="manifest" href="/play/astralelites/manifest.webmanifest">
</HeadContent>

<script>
    var config = {
        companyName: "Fydar",
        productName: "Astral Elites",
        productVersion: "v0.0.5-rc2",
        dataUrl: "/play/astralelites/build/v0.0.5-rc2.data.br",
        codeUrl: "/play/astralelites/build/v0.0.5-rc2.wasm.br",
        frameworkUrl: "/play/astralelites/build/v0.0.5-rc2.framework.js.br",
        streamingAssetsUrl: "/play/astralelites/StreamingAssets",
        arguments: [],
    };
    var loaderUrl = "/play/astralelites/build/v0.0.5-rc2.loader.js";
</script>

<EmbedUnity>
    <Placeholder>
        <img src="/play/astralelites/favicon.ico" alt="The logo for 'Astral Elites'." style="width: 200px; max-width: 90%; margin-bottom: 32px;" />
    </Placeholder>
</EmbedUnity>

<script>
    var serviceWorkerUrl = "/play/astralelites/ServiceWorker.js";
    window.addEventListener("load", function () {
        if ("serviceWorker" in navigator) {
            navigator.serviceWorker.register(serviceWorkerUrl);
        }
    });
</script>
